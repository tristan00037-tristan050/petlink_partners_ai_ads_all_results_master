ENABLE_DEV_MOCK=false
# r7: Admin & Ops Bridge
ADMIN_API_KEY=change-admin-key
POLICY_AI_ENDPOINT=
POLICY_AI_API_KEY=
POLICY_AI_TIMEOUT_MS=1200
POLICY_AI_BLOCK_THRESHOLD=0.75
