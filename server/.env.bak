# P0 서버 환경 변수

# 서버 포트
PORT=5903

# 데이터베이스
DATABASE_URL=postgres://postgres:petpass@localhost:5432/petlink

# 인증
ADMIN_KEY=admin-dev-key-123
JWT_SECRET=p0-jwt-secret-key-change-in-production

# CORS
APP_ORIGIN=http://localhost:5902
ADMIN_ORIGIN=http://localhost:8000
CORS_ORIGINS=http://localhost:5902,http://localhost:8000
JWT_SECRET=change-me-please
JWT_TTL_SEC=3600
RATE_LIMIT_WINDOW_SEC=60
RATE_LIMIT_MAX=120
CORS_ORIGIN=http://localhost:3000,http://localhost:3001,http://localhost:3002,http://localhost:3003
METRICS_ENABLED=true
