# r8: PG(Webhook) 연동
PG_STRIPE_WEBHOOK_SECRET=
PG_TOSS_WEBHOOK_SECRET=
PG_IAMPORT_WEBHOOK_SECRET=
BILLING_AUTO_RESUME=true

# r9: Email Notification (Optional)
SMTP_URL=
SMTP_FROM=no-reply@example.com
NOTIFY_EMAIL_TO=

# r10: BFF / Cookie
COOKIE_NAME=access_token
# COOKIE_DOMAIN=  # 개발 환경에서는 제거
COOKIE_SECURE=false
